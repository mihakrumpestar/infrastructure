{
  "$schema": "https://opencode.ai/config.json",

  "theme": "opencode",
  //"model": "moonshotai/kimi-k2.5",
  "autoupdate": false,

  // Provider configuration
  // Docs: https://opencode.ai/config.json
  // Models reference: https://models.dev/api.json and use OpenRouter as provider (search for Kimi K2.5)
  "provider": {
    "byteplus": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "byteplus",
      "options": {
        "baseURL": "https://ark.ap-southeast.bytepluses.com/api/coding/v3",
        "apiKey": "{env:BYTEPLUS_API_KEY}",
      },
      "models": {
        "kimi-k2.5": {
          "name": "Kimi K2.5",
          "reasoning": true,
          "tool_call": true,
          "temperature": true,
          "interleaved": true,
          "limit": {
            "context": 262144,
            "output": 65000,
          },
          "modalities": {
            "input": ["text", "image", "video"],
            "output": ["text"],
          },
          "options": {
            "temperature": 1.0,
            "top_p": 0.95,
          },
        },
      },
    },
  },

  // Use with: `use the <tool_name> tool`
  // Debug: opencode mcp list
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["bunx", "-y", "@upstash/context7-mcp"],
      "enabled": true,
      "environment": {
        "DEFAULT_MINIMUM_TOKENS": "6000",
      },
    },
    "godoc": {
      "type": "local",
      "command": ["go", "run", "github.com/mrjoshuak/godoc-mcp@latest"],
      "enabled": true,
    },
    "nixos": {
      "type": "local",
      "command": ["nix", "run", "github:utensils/mcp-nixos", "--"],
      "enabled": true,
    },
    // https://github.com/VectifyAI/pageindex-mcp // Why does it require login?
    //"pageindex": {
    //  "type": "local",
    //  "command": ["bunx", "-y", "pageindex-mcp"],
    //  "enabled": true
    //}
  },

  "plugin": ["cc-safety-net"],
}
